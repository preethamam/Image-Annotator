#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

FloatLayout:
    canvas:
        Color:
            rgb: 1,255,255
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44

<PicturesFrame>:
    picture_1:picture_1
    picture_1_center: (root.width/8*2,root.height/4*3)
    picture_2:picture_2
    picture_2_center: (root.width/8*6,root.height/4*3)
    picture_past:picture_past
    picture_past_center: (root.width/8*6,root.height/5)
    pastLabel:pastLabel
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height


    Picture:
        id: picture_1
#        pos:(100,300)
        center: root.picture_1_center

    Picture:
        id: picture_2
        center: root.picture_2_center

    Picture:
        id: picture_past
        center: root.picture_past_center

    Label:
        id: pastLabel
        font_size: 120
        text: 'start'
        center: (root.width/8*2,root.height/4)



 

<Picture>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
#    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None
    center_hint: (0,0)
    source: ''
    pic: image
    labelText:labelText

    Image:
        id: image
        source: root.source

        # create initial image to be 400 pixels width
        size: 640, 640 / self.image_ratio

        allow_stretch: True

        #canvas.before:
        #    Color:
        #        rgba: 1,1,1,1
        #    BorderImage:
        #        source: 'shadow32.png'
        #        border: (36,36,36,36)
        #        size:(self.width+72, self.height+72)
        #        pos: (-36,-36)

    Label:
        id: labelText
        font_size: 30
        text: root.source
        center_x: root.width / 2
        top: 980